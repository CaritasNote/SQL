WITH DziennaSumaWplat AS (
    SELECT 
        Kod,
        YEAR([Data transakcji]) AS RokWplaty,
        MONTH([Data transakcji]) AS MiesiacWplaty,
        [Data transakcji] AS PelnaDataTransakcji,
        SUM(CAST(REPLACE(Uznanie, ',', '.') AS FLOAT)) AS DziennaSuma
    FROM 
        Historia_wplat.dbo.Indywidualni_Historia_Wplat
    WHERE 
        ISNUMERIC(REPLACE(Uznanie, ',', '.')) = 1
    GROUP BY 
        Kod, YEAR([Data transakcji]), MONTH([Data transakcji]), [Data transakcji]
),
NumerowaneMiesiace AS (
    SELECT 
        Kod,
        RokWplaty,
        MiesiacWplaty,
        ROW_NUMBER() OVER (PARTITION BY Kod, RokWplaty ORDER BY MiesiacWplaty) AS NumerWiersza,
        PelnaDataTransakcji,
        DziennaSuma
    FROM 
        DziennaSumaWplat
),
CiagleGrupy AS (
    SELECT 
        A.Kod,
        A.RokWplaty,
        A.MiesiacWplaty,
        MIN(B.PelnaDataTransakcji) AS PierwszaKwalifikowanaData,
        COUNT(DISTINCT B.MiesiacWplaty) AS LiczbaCiaglychMiesiecy
    FROM 
        NumerowaneMiesiace A
    JOIN 
        NumerowaneMiesiace B
    ON 
        A.Kod = B.Kod
        AND A.RokWplaty = B.RokWplaty
        AND B.MiesiacWplaty BETWEEN A.MiesiacWplaty - 5 AND A.MiesiacWplaty
    GROUP BY 
        A.Kod, A.RokWplaty, A.MiesiacWplaty
),
KwalifikowaniDarczyńcy AS (
    SELECT 
        Kod,
        RokWplaty,
        MiesiacWplaty
    FROM 
        CiagleGrupy
    WHERE 
        LiczbaCiaglychMiesiecy >= 6
)
SELECT 
    RokWplaty AS Rok,
    MiesiacWplaty AS Miesiac,
    COUNT(DISTINCT Kod) AS LiczbaStalychDarczyńców
FROM 
    KwalifikowaniDarczyńcy
GROUP BY 
    RokWplaty, MiesiacWplaty
ORDER BY 
    Rok, Miesiac;
